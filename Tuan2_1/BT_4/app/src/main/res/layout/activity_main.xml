<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1B6E1E"
        android:text="Thông tin cá nhân"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="170dp"
            android:text="Họ và tên:"
            android:textAlignment="viewEnd"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/hoten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:width="240dp"
            android:textSize="20dp" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="170dp"
            android:text="CMND/CCCD:"
            android:textAlignment="viewEnd"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/cmnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="240dp"
            android:textSize="20dp" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:background="#00BCD4"
        android:text="Bằng Cấp"
        android:textAlignment="center"
        android:textColor="#E3D770"
        android:textSize="17dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <RadioGroup
            android:id="@+id/grBangCap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="fill_vertical"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/trungcap"
                android:layout_width="122dp"
                android:layout_height="wrap_content"
                android:text="Trung cấp"
                android:textSize="15dp" />

            <RadioButton
                android:id="@+id/caodang"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Cao Đẳng"
                android:textSize="15dp" />

            <RadioButton
                android:id="@+id/daihoc"
                android:layout_width="116dp"
                android:layout_height="wrap_content"
                android:text="Đại Học"
                android:textSize="15dp" />
        </RadioGroup>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:background="#00BCD4"
        android:text="Sở thích"
        android:textAlignment="center"
        android:textColor="#E3D770"
        android:textSize="17dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="fill_vertical"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/docbao"
            android:layout_width="121dp"
            android:layout_height="wrap_content"
            android:text="Đọc báo" />

        <CheckBox
            android:id="@+id/docsach"
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:text="Đọc Sách" />

        <CheckBox
            android:id="@+id/doccode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đọc Coding" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:background="#00BCD4"
        android:text="Thông tin bổ sung"
        android:textAlignment="center"
        android:textColor="#E3D770"
        android:textSize="17dp" />

    <EditText
        android:id="@+id/thongtin"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnGuiTT"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Gửi thông tin" />


</LinearLayout>